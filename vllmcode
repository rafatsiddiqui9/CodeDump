sampling_params = {
    "max_tokens": 150,
    "temperature": 0.7,          # Adjusts randomness; lower value for more deterministic output.
    "top_k": 50,                 # Limits sampling to the top 50 tokens; helps maintain quality.
    "top_p": 0.95,               # Nucleus sampling; considers tokens with cumulative probability up to 0.95.
    "frequency_penalty": 0.0,    # No penalty for token frequency.
    "presence_penalty": 0.0,     # No penalty for token presence.
    "length_penalty": 1.0,       # Neutral length penalty.
    "early_stopping": True,      # Stops early if end-of-sequence is encountered naturally.
    "stop_token_ids": [],        # No specific stop tokens to ensure continuation within token limits.
    "ignore_eos": False,         # Do not ignore end-of-sequence token.
    "repetition_penalty": 1.0,   # Neutral repetition penalty.
    "seed": None,                # Optional: Set to a specific integer for reproducibility.
    "include_stop_str_in_output": False, # Do not include stop string in output.
    "logprobs": None,            # Optional: Set to an integer to include log probabilities.
    "prompt_logprobs": False,    # Do not include log probabilities of prompt tokens.
    "truncate_prompt_tokens": False, # Do not truncate prompt tokens.
    "sampling_type": "top_p"     # Use nucleus sampling.
}
